{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "strict": true,
    "types": ["solid-start/env", "node", "vite/client"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["types/swiper.d.ts", "types/env.d.ts", "src"]
}
